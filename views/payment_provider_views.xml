<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="alinma_payment_provider_form" model="ir.ui.view">
        <field name="name">AlinmaPay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'alinma'">
                    <field name="alinma_name"
                           string="Merchant Identifier"
                           required="code == 'alinma' and state != 'disabled'"/>
                    <field name="alinma_terminal_id"
                           string="Terminal Id"
                           required="code == 'alinma' and state != 'disabled'"/>
                    <field name="alinma_merchant_key"
                           string="Merchant Key"
                           required="code == 'alinma' and state != 'disabled'"/>
                    <field name="alinma_terminal_password"
                           string="Terminal Password"
                           required="code == 'alinma' and state != 'disabled'"
                           password="True"/>
                    <field name="alinma_url"
                           string="URL"
                           required="code == 'alinma' and state != 'disabled'"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
